{
  "name": "typescript-node-boilerplate",
  "version": "0.0.1",
  "description": "",
  "main": "server.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "dev:watch": "ts-node-dev --respawn src/server.ts",
    "dev:index": "ts-node src/index.ts",
    "dev": "ts-node src/server.ts",
    "format": "prettier --write 'src/**/*.{js,ts,json}'",
    "lint:fx": "eslint src/**/*.ts --fix",
    "lint": "eslint src/**/*.ts",
    "start": "tsc && node dist/server.js",
    "server": "node src/server.ts",
    "build": "tsc",
    "tscCheck": "tsc --noEmit",
    "test": "jest --passWithNoTests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hasenn/typescript-node-boilerplate.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Hasenn/typescript-node-boilerplate/issues"
  },
  "homepage": "https://github.com/Hasenn/typescript-node-boilerplate#readme",
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/node": "^14.6.2",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.2.13",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0-pre.61",
    "tsc": "^1.20150623.0",
    "typescript": "^4.1.3"
  },

  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "winston": "^3.3.3"
  }
}
